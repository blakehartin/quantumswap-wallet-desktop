{
  "name": "quantumswapwallet",
  "productName": "quantumswapwallet",
  "version": "0.0.1",
  "description": "QuantumSwap",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-icons": "node scripts/build-icons.js"
  },
  "author": "QuantumSwap Community",
  "license": "MIT",
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "ethers": "^6.11.1",
    "quantumcoin": "^7.0.3",
    "quantumswap": "^0.0.1",
    "sjcl": "^1.0.8"
  },
  "build": {
    "extraResources": [
      "assets/**",
      "theme/**",
      "js/**",
      "lib/**",
      "**"
    ]
  },
  "files": [
    "js/**"
  ],
  "mac": {
    "target": {
      "target": "default",
      "arch": "universal"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/app/icon.ico",
      "appId": "QuantumSwap Wallet"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^40.4.1"
  },
  "overrides": {
    "tar": "^7.5.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/icons/app/icon.ico",
        "out": "dist",
        "osxUniversal": {
          "x64ArchFiles": "*"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "quantumwswapallet",
            "iconUrl": "https://quantumswap.com/icon.ico",
            "setupIcon": "src/assets/icons/app/icon.ico",
            "loadingGif": "src/assets/icons/loading.gif"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "quantumwallet",
            "icon": "src/assets/icons/app/icon.icns"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ],
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "src/assets/icons/app/icon.png"
            }
          }
        }
      ]
    }
  }
}
